<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= title %> Â· Reading Tracker</title>
    <link rel="stylesheet" href="/public/styles.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
  </head>
  <body>
    <header class="container">
      <h1>Reading Tracker</h1>
      <nav>
        <a href="/books">Books</a>
        <a href="/books/new" class="btn">Add</a>
      </nav>
    </header>
    <main class="container">
      <section>
        <h2>Edit book</h2>
        <form class="form" method="post" action="/books/<%= book.id %>" enctype="multipart/form-data">
          <label>Title
            <input type="text" name="title" value="<%= book.title %>" required />
          </label>
          <label>Author
            <input type="text" name="author" value="<%= book.author %>" />
          </label>
          <label>Status
            <select name="status">
              <option value="planned" <%= book.status==='planned'?'selected':'' %>>Planned</option>
              <option value="reading" <%= book.status==='reading'?'selected':'' %>>Reading</option>
              <option value="done" <%= book.status==='done'?'selected':'' %>>Done</option>
            </select>
          </label>
          <label>Due date
            <input id="dueDate" type="text" name="dueDate" value="<%= book.dueDate ? dayjs(book.dueDate).format('YYYY-MM-DD') : '' %>" />
          </label>
          <% if (book.attachmentPath) { %>
            <p>Current attachment: <a href="<%= book.attachmentPath %>" target="_blank">download</a></p>
          <% } %>
          <label>Replace attachment
            <input type="file" name="attachment" />
          </label>
          <div class="actions">
            <button class="btn" type="submit">Save</button>
            <a class="btn secondary" href="/books">Cancel</a>
          </div>
        </form>
      </section>
    </main>
    <footer class="container muted">
      <p>Server-rendered with Express + EJS</p>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
      flatpickr('#dueDate', {
        dateFormat: 'Y-m-d',
        defaultDate: document.getElementById('dueDate').value || undefined
      });
    </script>
  </body>
  </html>

